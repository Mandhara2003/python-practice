def greet_people(person_dict):
  """Greets each person in the dictionary.

  Args:
    person_dict: A dictionary where keys are names and values are ages.
  """

  for name, age in person_dict.items():
    print(f"Hello, {name}! You are {age} years old.")

# Example usage:
people = {"Alice": 30, "Bob": 25, "Charlie": 35}
greet_people(people)